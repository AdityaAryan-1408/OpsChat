generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  author    String
  room      String
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique  // New
  password  String            // New
  username  String?  @unique  // Now optional until Profile Setup
  name      String?           // Optional
  createdAt DateTime @default(now())
}